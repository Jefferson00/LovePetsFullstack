{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",                         
    "outDir": "./dist",                                                      
    "removeComments": true,                      
    "baseUrl": "./src", 
    "allowJs": true,                            
    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"]
    },                                 
    "typeRoots": [
      "./node_modules/@types",
       "./src/@types"
      ],                             
    "esModuleInterop": true,                        
    "resolveJsonModule": true,
    "experimentalDecorators": true,              
    "emitDecoratorMetadata": true,               
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true        
  }
}
